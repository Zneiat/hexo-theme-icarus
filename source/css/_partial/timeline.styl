.timeline-wrap
    margin: 40px 20px 40px 40px
    border-left: 4px solid color-border
    @media mq-mini
        margin: 40px 20px 40px 30px
    @media mq-mobile
        margin: 40px 20px 40px 30px

.timeline-row
    clearfix()
    margin: 20px 0
    .node,
    .title
        float: left
    .node
        width: 12px
        color: white
        height: 12px
        border-radius: 50%
        margin: 11px 0 0 -8px
        display: inline-block
        background-color: color-link
    .content
        @extend $block
        border: 1px solid color-border
        margin-left: 25px
        position: relative
        &:after,
        &:before
            content: ''
            position: absolute
            display: inline-block
        &:after
            top: 10px
            left: -14px
            border: 7px solid transparent
            border-right-color: white
        &:before
            top: 9px
            left: -16px
            border: 8px solid transparent
            border-right-color: rgba(0, 0, 0, 0.05)
        h1,
        .article-meta
            padding: 10px
        h1
            padding: 20px 25px
            text-align: center
            font-size: 20px
            a
              color: color-primary
              @extend $link-dark
        .article-meta
            margin-top: 0
            font-size: 12px
            color: color-default + #333
            border-top: 1px solid #f7f7f7
            background-color: rgba(244, 246, 247, 0.2)
            line-height: 24px

.timeline-row-major
    .node
        border: 2px solid #eceff2
        width: 14px
        height: 14px
        font-size: 14px
        text-align: center
        margin: 0 0 0 -18px
        padding: 6px 8px 10px
    .title
        font-size: 23px
        margin-left: 18px
        line-height: 30px
