.links-wrap
  margin: block-margin 0
  overflow: hidden

.links-wrap .links-title
  @extend $block
  padding: 20px 20px
  margin-bottom: block-margin
  .article-title
    text-align: left

.links-wrap .links-list
  margin: 0 -4px
  clearfix()

  .link-card
    margin-bottom: 18px
    @media mq-normal
      float: left
      width: 50%
    @media mq-tablet
      float: left
      width: 50%
    @media mq-mobile
      width: 100%
    @media mq-mini
      width: 100%

    & > .inner
      @extend $block
      border-radius: 1000px
      position: relative
      overflow: hidden
      height: 90px
      margin: 0 10px
      display: flex
      place-items: center
      flex-flow: row
      border: 2px solid transparent
      transition: 0.3s all linear
      &:hover
        @media mq-normal
          .info .name
            color: color-link

      .link
        position: absolute
        width: 100%
        height: 100%
        top: 0
        left: 0
        text-decoration: none
        z-index: 10
        opacity: 0;

      .face
        flex-basis: links-avatar-size
        .face-text
          width: links-avatar-size
          height: links-avatar-size
          line-height: links-avatar-size
          font-size: 30px
          text-align: center
          background-color: #e9ebed
          color: color-meta
        .face-img
          border-radius: 1000px
          background-color: #e9ebed
          width: links-avatar-size
          height: links-avatar-size
          background-size: cover
          background-position: center
          background-repeat: no-repeat
      .info
        flex: 1
        padding: 0px 15px 0 25px
        .name
          color: color-default
          display: block
          font-size: 23px
        .desc
          margin-top: 8px
          color: color-meta
          display: block
          font-size: 14px
          a
            color: color-meta
